<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/user_letter"
        android:background="@drawable/circular_background"
        android:backgroundTint="@color/black"
        android:text="T"
        android:padding="5dp"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:flow_verticalAlign="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_customer_name"
        android:text="Tanmay Shindkar"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/user_letter"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_customer_phone"
        android:text="7896541230"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/user_letter"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/order_customer_name"
        android:textColor="#575757"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_price"
        android:text="500.20"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/order_customer_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>